@model CIS.Web.Models.ContactDetailViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title{ Góp ý}

@RenderPage("~/Views/Shared/Banner.cshtml")

<div id='breadcrumbs-row'>
    <div class='container'>
        <p class='breadcrumbs'>Bạn đang ở trang: <a href='/Contact/Index'>Liên hệ</a></p>
    </div>
    <!-- / container -->
</div>
<!-- / breadcrumbs-row -->
<div id="spread" class="contact">
    <div class="container">        
        <div class="row-fluid">
            <div class="span6 offset3">
                <div class="h1 getintouch">Hộp Thư Góp Ý</div>
                <div title="Page 1">
                    <div>
                        <div>
                            <p>Nếu bạn có vấn đề cần trao đổi với chúng tôi hãy gửi mail góp ý cho chúng tôi: </p>
                        </div>
                    </div>
                </div>
                <form name="contactPageForm" id="contactPageForm" action="" method="post" class="">
                    <div style="display:none">
                        <input type="hidden" name="contactPageForm" id="contactPageForm-contactPageForm" value="1">
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="name" for="contactPageForm-name" class="">Tên*<span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="name" id="contactPageForm-name" value="" class=" " data-input="name" placeholder="Tên*">
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="phone" for="contactPageForm-phone" class="">Số điện thoại <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="phone" id="contactPageForm-phone" value="" class=" " data-input="phone" placeholder="Số điện thoại*">
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="email" for="contactPageForm-email" class="">Email <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="email" id="contactPageForm-email" value="" class=" " data-input="email" placeholder="Email*">
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="message" for="contactPageForm-message" class="">Tin nhắn <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <textarea name="message" id="contactPageForm-message" class=" " data-input="message" placeholder="Tin nhắn*" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="category" for="contactPageForm-category" class="">Bộ phận <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <select name="category" id="contactPageForm-category" class=" " data-input="category">
                                    <option value="0">Các phòng*</option>
                                    <option value="24">Phòng tổ chức</option>
                                    <option value="25">Khoa</option>
                                    <option value="26">Ban giám hiệu</option>
                                    <option value="27">Sinh viên</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <p><span>Code</span> What is 1 + 3?:</p>
                    <div class="field_wrap">
                        <div class="input_wrap">
                            <input type="text" name="captcha" id="contactPageForm-captcha" value="" class=" " data-input="captcha" placeholder="Câu hỏi bảo mật*">
                        </div>
                    </div>
                    <div class="submit_wrap">
                        <button type="submit" class="">GỬI GÓP Ý</button>
                    </div>
                </form>
                <p class="contact-note"> * Chúng tôi sẽ phản hồi yêu cầu của bạn sớm nhất </p>
            </div>
        </div>
    </div>
    <!-- / container -->


    <div class="contact-items-wrap">
        <div class="container">
            <div class="h1">Địa chỉ Liên hệ</div>
            <div class="row-fluid no-gutter">
                <!-- <div class="span3 contact-item"> -->
                <div class="span12">
                    <p>
                        <a href="#" target="_blank">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15672.526878588902!2d106.8016196!3d10.8775848!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x550c2b41569376f9!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBRdeG7kWMgVOG6vyAtIMSQ4bqhaSBo4buNYyBRdeG7kWMgZ2lhIFRQLkhDTQ!5e0!3m2!1svi!2s!4v1562636725153!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </a>
                    </p>
                    <h5>Trung Tâm Dịch Vụ Công Nghệ Thông Tin </h5>
                    <p>
                        Phòng A1.312,<br /> Khu phố 6, P.Linh Trung, Q. Thủ Đức, TP.HCM
                    </p><a href="https://goo.gl/maps/ngkEUfurrWrTRsb19" target="_blank">Chọn đường đi trực tiếp google map</a>
                </div>
            </div>
        </div><!-- / container -->
    </div>
</div><!-- / contact-items-wrap -->
