@model CIS.Web.Models.JobViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title {
    Đơn tuyển dụng
}

@{
    ViewBag.Title = "Đơn tuyển dụng";
    ViewBag.MetaDescription = "Đơn tuyển dụng";
    ViewBag.MetaKeywords = "Đơn tuyển dụng";
}

@{Html.RenderAction("Slide", "Home");}

<div id='breadcrumbs-row'>
    <div class='container'>
        <div class="row-fluid">
            <div class="span12">
                <p class='breadcrumbs'>Bạn đang ở trang: <a href='/form-tuyen-dung'>Đơn tuyển dụng</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="h2 getintouch" style="text-align:center;">Điền các thông tin sau</div>
    <form action="/Job/Apply" method="post" enctype="multipart/form-data">
        <input type="hidden" txt="txtJobId" name="jobId" value="@Model.ID" />
        <div class="form-group row">
            <div class="span4"><b>Applied Position (Vị trí ứng tuyển):</b></div>
            <div class="span8">
                <input type="text" value="@Model.Name" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="span4"><b>Fullname (Họ và tên)*:</b></div>
            <div class="span8">
                <input type="text" id="txtFullname" name="fullname" required />
            </div>
        </div>
        <div class="form-group row">
            <div class="span4"><b>Email*:</b></div>
            <div class="span8">
                <input type="email" id="txtEmail" name="email" required />
            </div>
        </div>
        <div class="form-group row">
            <div class="span4"><b>Phone (SĐT)*:</b></div>
            <div class="span8">
                <input type="tel" id="txtPhone" name="phone" required />
            </div>
        </div>
        <div class="form-group row">
            <div class="span4"><b>Resume (pdf)*:</b></div>
            <div class="span8">
                <input type="file" id="file" name="file" required />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="span6">
                <a href="/tuyen-dung" class="btn btn-default pull-left">Cancel (Huỷ)</a>
                <button type="submit" class="btn btn-success pull-right">Submit (Nộp đơn)</button>
            </div>
        </div>

    </form>
</div>

