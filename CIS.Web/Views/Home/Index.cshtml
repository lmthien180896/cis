@model CIS.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var aboutUs = (CIS.Web.Models.PostViewModel)ViewBag.AboutUs;
    var webPost = (CIS.Web.Models.PostViewModel)ViewBag.Web;
    var systemPost = (CIS.Web.Models.PostViewModel)ViewBag.System;
}


@section title { Trang chủ}

@{Html.RenderAction("Slide", "Home");}

<div id="services-row">
    <div class="container">
        <div class="row">
            <span class="services-title">DỊCH VỤ </span>
            <div class="col-sm-15">
                <a href="/dich-vu-web" class="">
                    <img alt="web" src="/Assets/client/CIS-pro/cis-img/web.png">
                    <h2 class="aligncenter">Thiết kế Web</h2>
                </a>
            </div>
            <div class="col-sm-15">
                <!--empty -->
            </div>
            <div class="col-sm-15">
                <a href="/dich-vu-thiet-ke-do-hoa" class="">
                    <img alt="dohoa" src="/Assets/client/CIS-pro/cis-img/dohoa.png">
                    <h2 class="aligncenter">Thiết kế Đồ Họa</h2>
                </a>
            </div>
            <div class="col-sm-15">
                <!--empty -->
            </div>
            <div class="col-sm-15">
                <a href="/dich-vu-he-thong" class="">
                    <img alt="hethong" src="/Assets/client/CIS-pro/cis-img/hethong.png">
                    <h2 class="aligncenter">Hệ thống</h2>
                </a>
            </div>
        </div>
    </div>
</div>

<div id="index-banner" style="background:url('/Assets/client/CIS-pro/cis-img/cis-deparments.jpg') no-repeat top center;">
    <div class="container">
        <div class="row-fluid">
            <div class="span12 text-center">
                <h1 class=" tnb">Tin Nổi Bật</h1>
            </div>
        </div>
        <div class="row-fluid">
            @foreach (var news in Model.HotNews)
            {
                <div class="span6 pd25">
                    <a href="@news.ReferenceUrl"><p>@news.Name</p></a>
                </div>
            }           
            @*<div class="text-right">
                <a href="#" class="more text-left">Xem tất cả tin </a>
            </div>*@
        </div>

    </div><!-- .container -->
</div><!-- #index-banner -->


<div id="index-main" class="new">
    <div class="container">
        <div class="row-fluid">
            <div class="span4">
                <div class="block-title">Về chúng tôi</div>
                <p style="text-align:justify;">@aboutUs.Description</p>
                <p><a class="more" href="/gioi-thieu">Xem thêm</a></p>
            </div>
            <div class="span4 case-studies-wrap">
                <div class="block-title">Dịch vụ Web</div>
                <p>@webPost.Description</p>
                <a class="more" href="/dich-vu-web">Xem chi tiết</a>
            </div>
            <div class="span4 case-studies-wrap">
                <div class="block-title">Dịch vụ Hệ thống</div>
                <p>@systemPost.Description</p>
                <a class="more" href="/dich-vu-he-thong">Xem chi tiết</a>
            </div>
        </div>
    </div>
    <!-- / container -->
</div>

<div id="index-twitter">
    <div class="container">
        <div class="row-fluid">
            <div class="logoiu">
                <a href='https://hcmiu.edu.vn' class="logoiu">
                    <img src="/Assets/client/CIS-pro/cis-img/iu-logo.png">
                </a>
            </div>
            <div class="text-iu">
                <div class="tweet">
                    <a href="/Assets/client/CIS-pro/https://hcmiu.edu.vn" target="_blank" class="iulogo">
                        <h2 class="clWhite">Đại học Quốc Gia TP.HCM - Trường Đại học Quốc Tế </h2>
                        <span>website</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="index-news">
    <div class="container">
        <div class="row-fluid">
            <span class="news-title">TIN TỨC</span>
            <div class="row-fluid">
               @foreach (var news in Model.ListNews)
                    {
                        <div class="span4">
                            <a class="latest-news-item" href="/tin-tuc/@news.Alias-@news.ID">
                                <img alt="@news.Name" src="@news.Image" /><span class="latest-news-date">@news.CreatedDate.Value.ToString("dd MMMM yyyy")</span>
                                <h5>@news.Name</h5>
                                <p>@news.Description</p><span class="more-circle"></span>
                            </a>
                        </div>
                    }
            </div>
            <!--End News-->
        </div>
    </div>
</div>