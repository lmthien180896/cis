@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section title{
    Gửi yêu cầu
}


@RenderPage("~/Views/Shared/Banner.cshtml")

<div id='breadcrumbs-row'>
    <div class='container'>
        <p class='breadcrumbs'>Bạn đang ở trang: <a href='#'>Gửi yêu cầu</a></p>
    </div>
    <!-- / container -->
</div>
<!-- / breadcrumbs-row -->

<div id="spread" class="contact">
    <div class="container">
        <div class="row-fluid">
            <div class="span6 offset3">
                <div class="h2 getintouch">MAKE A REQUEST</div>
                <p>Gửi yêu cầu</p>
                <div title="Page 1">
                    <div>
                        <div>
                            <p>đến Trung tâm DV CNTT: </p>
                        </div>
                    </div>
                </div>
                <form id="contactPageForm" name="contactPageForm" method="post" action="/Issue/SubmitIssue" enctype="multipart/form-data">

                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label data-input="category" for="contactPageForm-category" class="">Issue topic (loại yêu cầu) <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <select class="form-control" name="Topic" id="sltTopic" required>
                                    <option value="">-- Choose an issue topic (Chọn loại yêu cầu) --</option>
                                    @*@foreach (var topic in ViewBag.Topic)
                                    {
                                        <option value="@topic">@topic</option>
                                    }*@
                                    <option value="Vấn đề khác">Other topics (Vấn đề khác)</option>
                                </select>
                                <span style="color: red" id="warning-topic"></span>
                            </div>
                        </div>
                    </div>

                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label class="">Name(tên)*<span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="FullName" id="txtFullname" value="" placeholder="Name (Tên)*" required>
                                <span style="color: red" id="warning-fullname"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label>Email <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="Email" id="txtEmail" value="" class=" " placeholder="Email (các email cách nhau bằng dấu ';')*" required>
                                <span style="color: red" id="warning-email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label>Số điện thoại</label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="Phone" id="txtPhone" value="" class=" " placeholder="Phone (Số điện thoại)">
                            </div>
                        </div>
                    </div>
                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label>Place<span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <input type="text" name="Place" id="txtPlace" value="" placeholder="Place (Vị trí gửi yêu cầu)*" required>
                                <span style="color: red" id="warning-place"></span>
                            </div>
                        </div>
                    </div>

                    <div class="field_wrap">
                        <div class="field_wrap">
                            <div class="label_wrap">
                                <label>Your Request(Yêu cầu của bạn) <span class="required">*</span></label>
                            </div>
                            <div class="input_wrap">
                                <textarea name="IssueDetails" id="txtIssueDetails" placeholder="Your Request (Yêu cầu)*" rows="2" required></textarea>
                                <span style="color: red" id="warning-issuedetails"></span>
                            </div>
                        </div>
                    </div>


                    <div class="input_wrap">
                        <input type="file" id="files" name="files" multiple>
                        <h6>Upload file format: jpg, jpeg, png or docx, and not greater than 2MB</h6>
                    </div>


                    <p><span>Code</span> What is 1 + 3?:</p>
                    <div class="field_wrap">
                        <div class="input_wrap">
                            <input type="text" name="Captcha" id="txtCaptcha" value="" class=" " data-input="captcha" placeholder="Trả lời câu hỏi bảo mật (Answer)*" required>
                            <span style="color: red" id="warning-captcha"></span>
                        </div>
                    </div>

                    <div class="submit_wrap">
                        <button type="submit" id="btnSubmit">Send request / Gửi yêu cầu</button>
                    </div>
                </form>



                <p class="contact-note"> * Chúng tôi sẽ phản hồi yêu cầu bạn sớm nhất </p>
            </div>
        </div>
    </div>
    <!-- / container -->


    <div class="contact-items-wrap">
        <div class="container">
            <div class="h1">Địa chỉ Liên hệ</div>
            <div class="row-fluid no-gutter">
                <!-- <div class="span3 contact-item"> -->
                <div class="span12">
                    <p>
                        <a href="#" target="_blank">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15672.526878588902!2d106.8016196!3d10.8775848!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x550c2b41569376f9!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBRdeG7kWMgVOG6vyAtIMSQ4bqhaSBo4buNYyBRdeG7kWMgZ2lhIFRQLkhDTQ!5e0!3m2!1svi!2s!4v1562636725153!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </a>
                    </p>
                    <h5>Trung Tâm Dịch Vụ Công Nghệ Thông Tin </h5>
                    <p>
                        Phòng A1.312,<br /> Khu phố 6, P.Linh Trung, Q. Thủ Đức, TP.HCM
                    </p><a href="https://goo.gl/maps/ngkEUfurrWrTRsb19" target="_blank">Chọn đường đi trực tiếp google map</a>
                </div>
            </div>
        </div><!-- / container -->
    </div>
</div><!-- / contact-items-wrap -->
