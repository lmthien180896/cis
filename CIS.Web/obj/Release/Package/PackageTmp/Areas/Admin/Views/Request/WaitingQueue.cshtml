
@{
    ViewBag.Title = "SupportingQueue";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section js{    
    <script src="~/Assets/admin/js/controller/requestController.js"></script>
}

<h3>Danh sách yêu cầu đang chờ xử lí</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách yêu cầu đang chờ xử lí</h2>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 50px;">ID</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Người gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Nơi gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Ngày gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 202px;">Chi tiết</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 200px;"></th>
                                </tr>
                            </thead>

                            <tbody id="tblAllRequests">
                                @foreach (var request in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td><input type="checkbox" class="chkDelete" data-id=@request.ID /></td>
                                        <td>@request.ID</td>
                                        <td>@request.SenderName</td>
                                        <td>@request.Place</td>
                                        <td>@request.SentDate</td>
                                        <td>@request.Detail</td>
                                        <td>
                                            <a href="#" data-id=@request.ID class="btn btn-info btn-xs btnUpdate"><i class="fa fa-pencil"> Edit</i></a>
                                            <a href="#" data-id=@request.ID class="btn btn-default btn-xs btnSupport"><i class="fa fa-wrench"> Support</i></a>
                                            <a href="#" data-id=@request.ID class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash"> Delete</i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xem nhanh yêu cầu</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" novalidate>
                    <input type="hidden" id="txtID" name="id" value="0" />
                    <input type="hidden" id="txtProgress" name="progress" value="" />
                    <div class="item form-group">
                        <label class="control-label" for="name">Loại yêu cầu</label>
                        <select class="form-control" id="sltCategoryID" name="categoryId">
                            <option value="">Chọn loại yêu cầu</option>
                            @foreach (var category in ViewBag.ListRequestCategory)
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="sender">Người gửi</label>
                        <input class="form-control" id="txtSenderName" name="senderName" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="place">Nơi gửi</label>
                        <input class="form-control" id="txtPlace" name="place" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="email">Email</label>
                        <input class="form-control" id="txtEmail" name="email" type="email" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="phone">Số điện thoại</label>
                        <input class="form-control" id="txtPhone" name="phone" type="tel">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="createdDate">Ngày gửi</label>
                        <input class="form-control" id="txtCreatedDate" name="createdDate" type="date" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="detail">Chi tiết</label>
                        <textarea class="form-control" id="txtDetail" name="detail" type="text" required="required"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>