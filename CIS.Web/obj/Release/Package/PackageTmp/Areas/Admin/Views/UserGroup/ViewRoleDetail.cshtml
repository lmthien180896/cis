
@{
    ViewBag.Title = "View Role Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js{    
    <script src="~/Assets/admin/js/controller/userGroupController.js"></script>
}


<h3>Danh sách quyền của @ViewBag.UserGroup</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Quyền của @ViewBag.UserGroup</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" usergroup="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr usergroup="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 60%;">Quyền</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 40%;">Trạng thái</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr usergroup="row" class="odd">
                                        <td>@role.Role</td>
                                        <td>@Html.Raw(role.Status ? "<a href='#' class='btn btn-success btn-xs btnStatus' data-usergroupid=" + role.UserGroupID + " data-roleid=" + role.RoleID + ">Kích hoạt</a>" : "<a href='#' class='btn btn-danger btn-xs btnStatus' data-usergroupid=" + role.UserGroupID + " data-roleid=" + role.RoleID + ">Khoá</a>")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

