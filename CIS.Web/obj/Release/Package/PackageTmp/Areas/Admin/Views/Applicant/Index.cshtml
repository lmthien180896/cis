@model IEnumerable<CIS.Web.Models.ApplicantViewModel>
@{
    ViewBag.Title = "Applicants";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js {
    <script>
        var txtMessage = CKEDITOR.replace('txtMessage', {
            customConfig: '/Assets/admin/libs/ckeditor/config.js'
        });
    </script>
    <script src="~/Assets/admin/js/controller/applicantController.js"></script>
}

<h2>Danh sách applicant</h2>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách applicant</h2>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Title: activate to sort column descending" style="width: 150px;">Họ tên</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Publisher: activate to sort column descending" style="width: 100px;">Email</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="PublishedDate: activate to sort column ascending" style="width: 153px;">SĐt</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 100px;">Vị trí nộp</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 100px;">Ngày gửi</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 80px;"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var applicant in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td><input type="checkbox" class="chkDelete" data-id="@applicant.ID" /></td>
                                        <td class="sorting_1">@applicant.Fullname</td>
                                        <td>@applicant.Email</td>
                                        <td>@applicant.Phone</td>
                                        <td>@applicant.JobName</td>
                                        <td>@applicant.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a href="#" data-id="@applicant.ID" class="btn btn-primary btn-xs btnSendMail"><i class="fa fa-envelope"></i> Send</a>
                                            <a href="#" data-id="@applicant.ID" class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalSendMail" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gửi mail</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" id="frmSendMail" novalidate>
                    <div class="item form-group">
                        <label class="control-label" for="name">Gửi đến</label>
                        <input class="form-control" id="txtEmail" type="email">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="name">Nội dung</label>
                        <textarea class="form-control" id="txtMessage" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>