
@{
    ViewBag.Title = "SupportingQueue";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section js{  
    <!--Controller-->
    <script src="~/Assets/admin/js/controller/requestController.js"></script>
}

<h3>Danh sách yêu cầu đang xử lí</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách yêu cầu đang xử lí</h2>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 50px;">ID</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Người gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Nơi gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Ngày gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 202px;">Chi tiết</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 180px;"></th>
                                </tr>
                            </thead>

                            <tbody id="tblAllRequests">
                                @foreach (var request in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td><input type="checkbox" class="chkDelete" data-id=@request.ID /></td>
                                        <td>@request.ID</td>
                                        <td>@request.SenderName</td>
                                        <td>@request.Place</td>
                                        <td>@request.SentDate</td>
                                        <td>@request.Detail</td>
                                        <td>
                                            <a href="#" data-id=@request.ID class="btn btn-info btn-xs btnAddNote"><i class="fa fa-sticky-note"> Note</i></a>
                                            <a href="/Admin/Request/ViewDetail/@request.ID" data-id=@request.ID class="btn btn-primary btn-xs btnView"><i class="fa fa-eye"> View</i></a>
                                            <a href="#" data-id=@request.ID class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash"> Delete</i></a>
                                            <a href="#" data-id=@request.ID class="btn btn-success btn-xs btnSendConfirm"><i class="fa fa-envelope"> Send</i></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddNote" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ghi chú yêu cầu</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" novalidate>                    
                    <div class="item form-group">
                        <label class="control-label" for="requestId">ID yêu cầu</label>
                        <input type="text" class="form-control" id="txtRequestId" name="requestId" readonly />
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="supporter">Người viết</label>
                        ....
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="detail">Nội dung</label>
                        <textarea class="form-control" id="txtNote" name="note" type="text" required="required"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmitNote" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>

