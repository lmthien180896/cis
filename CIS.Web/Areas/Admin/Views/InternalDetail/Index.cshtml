@model IEnumerable<CIS.Web.Models.InternalDetailViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js{
    <script src="~/Assets/admin/js/controller/internalDetailController.js"></script>
}

<h3>Thông tin nội bộ</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Thông tin nội bộ</h2>
            <a class="btn btn-success pull-right"  id="btnAdd" data-toggle="modal" data-target="#modalAddUpdate"><i class="fa fa-plus"></i> Tạo mới</a>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username: activate to sort column descending" style="width: 202px;">Nội dung</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Fullname: activate to sort column descending" style="width: 202px;">URL</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="UserGroup: activate to sort column ascending" style="width: 100px;">Ngày cập nhật</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 80px;"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var detail in Model)
                                {
                                    <tr role="row" class="odd">
                                        @{var chkId = "chk" + detail.ID;}
                                        <td><input type="checkbox" id=@chkId class="chkDelete" data-id="@detail.ID" /></td>
                                        <td class="sorting_1">@detail.Name</td>
                                        <td>@detail.FileUrl</td>
                                        <td>@(detail.UpdatedDate != null ? detail.UpdatedDate.Value.ToString("dd/MM/yyyy") : detail.CreatedDate.Value.ToString("dd/MM/yyyy"))</td>
                                        <td>
                                            <a href="#" data-id="@detail.ID" class="btn btn-info btn-sm btnUpdate"><i class="fa fa-pencil"></i></a>
                                            <a href="#" data-id="@detail.ID" class="btn btn-danger btn-sm btnDelete"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" id="frmAddUpdate" novalidate>
                    <input type="hidden" id="txtID" />
                    <div class="item form-group">
                        <label class="control-label" for="name">Tên</label>
                        <input class="form-control" id="txtName" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="title">URL</label>
                        <input type="text" id="txtFileUrl" name="fileUrl" class="form-control" required="required"/>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>
    </div>
</div>