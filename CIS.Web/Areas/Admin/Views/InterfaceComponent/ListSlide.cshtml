@model IEnumerable<CIS.Web.Models.SlideViewModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js{
    <script src="~/Assets/admin/js/controller/interfaceComponentController.js"></script>
}

<h2>Danh sách Slide</h2>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách Slide</h2>
            <a class="btn btn-success pull-right" href="#" id="btnAdd" data-toggle="modal" data-target="#modalAdd"><i class="fa fa-plus"></i> Tạo mới</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" usergroup="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr usergroup="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 10px;">ID</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 50px;">Tên slide</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 500px;">Đường dẫn</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slide in Model)
                                {
                                    <tr>
                                        <td>@slide.ID</td>
                                        <td><input style="width: 100%" id="slideName-@slide.ID" value="@slide.Name" /></td>
                                        <td><input style="width: 100%" id="slideImage-@slide.ID" value="@slide.Image" /></td>
                                        <td><a href="#" data-id="@slide.ID" class="btn btn-primary btn-xs btnSaveSlide"><i class="fa fa-save"> Save</i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAdd" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin slide</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" id="frmAdd" novalidate>                    
                    <div class="item form-group">
                        <label class="control-label" for="name">Tên slide</label>
                        <input class="form-control" id="txtName" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="name">Đường dẫn ảnh</label>
                        <input class="form-control" id="txtImage" type="text" required="required">
                        <button type="button" class="btn btn-default">Chọn ảnh</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>
