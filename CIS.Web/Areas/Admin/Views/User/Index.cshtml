@model IEnumerable<CIS.Web.Models.UserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section js{   
    <script src="~/Assets/admin/js/controller/userController.js"></script>
}

<h3>Danh sách người dùng</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách người dùng</h2>
            <a class="btn btn-success pull-right" href="/Admin/User/CreateView"><i class="fa fa-plus"></i> Tạo mới</a>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username: activate to sort column descending" style="width: 202px;">Tài khoản</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Fullname: activate to sort column descending" style="width: 202px;">Tên</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="UserGroup: activate to sort column ascending" style="width: 100px;">Nhóm người dùng</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending" style="width: 153px;">Email</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending" style="width: 82px;">Trạng thái</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 80px;"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr role="row" class="odd">
                                        @{var chkId = "chk" + user.ID;}
                                        <td><input type="checkbox" id=@chkId class="chkDelete" data-id="@user.ID" /></td>
                                        <td class="sorting_1">@user.Username</td>
                                        <td>@user.Fullname</td>
                                        <td>@user.GroupDisplayName</td>
                                        <td>@user.Email</td>
                                        <td>@Html.Raw((user.Status) ? "<a href='#' class='btn btn-success btn-xs btnStatus' data-id=" +user.ID+ ">Kích hoạt</a>" : "<a href='#' class='btn btn-danger btn-xs btnStatus' data-id=" + user.ID + ">Khoá</a>")</td>
                                        <td>
                                            <a href="/Admin/User/EditView/@user.ID" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>
                                            <a href="#" data-id="@user.ID" class="btn btn-danger btn-sm btnDelete"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>