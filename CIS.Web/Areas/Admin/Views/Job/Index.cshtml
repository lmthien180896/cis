@model IEnumerable<CIS.Web.Models.JobViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section js{
    <script src="~/Assets/admin/js/controller/jobController.js"></script>
    <script>
        var txtDescription = CKEDITOR.replace('txtDescription', {
            customConfig: '/Assets/admin/libs/ckeditor/config.js'
        });
    </script>
}

<h2>Danh sách vị trí</h2>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách vị trí</h2>
            <a class="btn btn-success pull-right" href="#" id="btnAdd" data-toggle="modal" data-target="#modalAddUpdate"><i class="fa fa-plus"></i> Tạo mới</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" usergroup="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr usergroup="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 10px;">ID</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 100px;">Tên vị trí</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 300px;">Mô tả</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 20px;">Trạng thái</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>@job.ID</td>
                                        <td>@job.Name</td>
                                        <td>@Html.Raw(job.Description)</td>
                                        <td>@Html.Raw(job.Status ? "<span class='btn btn-success btn-sm btnStatus' data-id='"+job.ID+"'>Activated</span>" : "<span class='btn btn-danger btn-sm btnStatus' data-id='" + job.ID+"'>Disabled</span>")</td>
                                        <td>
                                            <a href="#" data-id="@job.ID" class="btn btn-info btn-xs btnUpdate"><i class="fa fa-edit"> Edit</i></a>
                                            <a href="#" data-id="@job.ID" class="btn btn-danger btn-xs btnDelete"><i class="fa fa-trash"> Delete</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin job</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" id="frmAddUpdate" novalidate>
                    <input type="hidden" id="txtID" />
                    <div class="item form-group">
                        <label class="control-label" for="name">Tên vị trí</label>
                        <input class="form-control" id="txtName" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="name">Mô tả</label>
                        <textarea id="txtDescription" required="required"></textarea>
                    </div>
                    <div class="item form-group">
                        <label class="col-sm-2">Trạng thái</label>
                        <div >
                            <label>
                                <input type="checkbox" id="chkStatus" name="status" value="true"/>
                                <input name="status" type="hidden" value="false" />
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>

