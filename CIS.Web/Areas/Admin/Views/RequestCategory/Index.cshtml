<h3>Danh sách loại yêu cầu</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách loại yêu cầu</h2>
            <a class="btn btn-success pull-right" href="#" id="btnAdd" data-toggle="modal" data-target="#modalAddUpdate"><i class="fa fa-plus"></i> Tạo mới</a>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 302px;">Loại yêu cầu</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 100px;">Trạng thái</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 80px;"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td><input type="checkbox" class="chkDelete" data-id="@category.ID" /></td>
                                        <td class="sorting_1">@category.Name</td>
                                        <td>@Html.Raw((category.Status) ? "<a href='#' class='btn btn-success btn-xs btnStatus' data-id=" + category.ID + ">Kích hoạt</a>" : "<a href='#' class='btn btn-danger btn-xs btnStatus' data-id=" + category.ID + ">Khoá</a>")</td>
                                        <td>
                                            <a href="#" data-id="@category.ID" class="btn btn-info btn-sm btnUpdate"><i class="fa fa-pencil"></i></a>
                                            <a href="#" data-id="@category.ID" class="btn btn-danger btn-sm btnDelete"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin loại yêu cầu</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" novalidate>
                    <input type="hidden" id="txtID" name="id" />
                    <div class="item form-group">
                        <label class="control-label" for="name">Tên loại yêu cầu</label>
                        <input class="form-control" id="txtName" name="name" placeholder="Loại yêu cầu" type="text" required="required">
                    </div>
                    <div class="form-group">
                        <label class="">Trạng thái</label>
                        <div style="margin-top: 5px">
                            <label>
                                <input type="checkbox" name="status" id="chkStatus" value="true"/>
                                <input name="status" type="hidden" id="chkStatus" value="false"/>
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>