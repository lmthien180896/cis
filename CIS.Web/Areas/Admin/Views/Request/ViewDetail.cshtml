@model CIS.Web.Models.RequestViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thông tin yêu cầu</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <dt class="col-sm-2" style="text-align:right;">ID yêu cầu: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.ID</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Loại yêu cầu: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.CategoryName</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Yêu cầu: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.Detail</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Nơi xảy ra: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.Place</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Người gửi: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.SenderName</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Email: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.Email</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Số điện thoại: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.Phone</dd>
                <br /><br />                
                <dt class="col-sm-2" style="text-align:right;">Ngày xảy ra: </dt>
                <dd class="col-sm-6" style="text-align:left;">@Model.SentDate</dd>
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">File đính kèm: </dt>
                @*<dd class="col-sm-6" style="text-align:left;">
                    @if (ViewBag.Files != null)
                    {
                        foreach (var file in ViewBag.Files)
                        {
                            <a href=@file target="_blank">@file</a><br />
                        }
                    }
                </dd>*@
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Chuyên viên xử lí: </dt>
                @*<dd class="col-sm-6" style="text-align:left;">@Model.Supporter</dd>*@
                <br /><br />
                <dt class="col-sm-2" style="text-align:right;">Ngày hoàn thành: </dt>
                @*<dd class="col-sm-6" style="text-align:left;">@Model.ClosedDate.Value.ToString("dd MMMM yyyy")</dd>*@
                <br /><br />

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Ghi chú</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <table class="table table-striped table-bordered dataTable no-footer">
                    <thead>
                        <tr>
                            <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 100px;">Người viết</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 200px;">Nội dung</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 100px;">Ngày đăng</th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.RequestReports)
                        {
                        <tr>
                            <td><input type="checkbox" class="chkDelete" data-id=@report.ID /></td>
                            <td></td>
                            <td>@report.Note</td>
                            <td>@report.CreatedDate.Value.ToString("dd/MM/yyyy")</td>
                            <td><a href="#" class="btn btn-danger btn-sm btnDeleteNote"><i class="fa fa-trash"></i></a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
