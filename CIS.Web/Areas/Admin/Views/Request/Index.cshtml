<h3>Danh sách yêu cầu</h3>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Danh sách yêu cầu</h2>
            <a class="btn btn-success pull-right" href="#" id="btnAdd" data-toggle="modal" data-target="#modalAddUpdate"><i class="fa fa-plus"></i> Tạo mới</a>
            <a class="btn btn-danger pull-right" id="btnDeleteAll" href="#"><i class="fa fa-trash"></i> Xoá</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="" style="width: 10px;"><input type="checkbox" id="chkAll" /></th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 102px;">Loại yêu cầu</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 202px;">Người gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 202px;">Nơi gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="RequestCategory: activate to sort column descending" style="width: 202px;">Ngày gửi</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Status: activate to sort column descending" style="width: 100px;">Trạng thái</th>
                                    <th tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 80px;"></th>
                                </tr>
                            </thead>

                            <tbody id="tblAllRequests"></tbody>
                            <script id="data-template-allRequests" type="x-tmpl-mustache">
                                <tr role="row" class="odd">
                                    <td><input type="checkbox" class="chkDelete" data-id={{ID}} /></td>
                                    <td class="sorting_1">{{RequestCategory}}</td>
                                    <td class="sorting_1">{{SenderName}}</td>
                                    <td>{{Place}}</td>
                                    <td>{{SentDate}}</td>
                                    <td>{{Progress}}</td>
                                    <td>
                                        <a href="#" data-id={{ID}} class="btn btn-info btn-sm btnUpdate"><i class="fa fa-pencil"></i></a>
                                        <a href="#" data-id={{ID}} class="btn btn-danger btn-sm btnDelete"><i class="fa fa-trash"></i></a>
                                    </td>

                                </tr>
                            </script>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="modalAddUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xem nhanh yêu cầu</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-label-left" novalidate>
                    <input type="hidden" id="txtID" name="id" value="0" />
                    <div class="item form-group">
                        <label class="control-label" for="name">Loại yêu cầu</label>
                        <select class="form-control" id="sltCategoryID" name="categoryId">
                            <option value="">Chọn loại yêu cầu</option>
                            @foreach (var category in ViewBag.ListRequestCategory)
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="sender">Người gửi</label>
                        <input class="form-control" id="txtSenderName" name="senderName" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="place">Nơi gửi</label>
                        <input class="form-control" id="txtPlace" name="place" type="text" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="email">Email</label>
                        <input class="form-control" id="txtEmail" name="email" type="email" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="phone">Số điện thoại</label>
                        <input class="form-control" id="txtPhone" name="phone" type="tel">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="createdDate">Ngày gửi</label>
                        <input class="form-control" id="txtCreatedDate" name="createdDate" type="date" required="required">
                    </div>
                    <div class="item form-group">
                        <label class="control-label" for="detail">Chi tiết</label>
                        <textarea class="form-control" id="txtDetail" name="detail" type="text" required="required"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Trạng thái</label>
                        <p>
                            Chờ xử lí:<input type="radio" class="flat" name="progress"  value="waiting" checked required/>
                            Đang xử lí:<input type="radio" class="flat" name="progress"  value="fixing"/>
                            Đã xử lí:<input type="radio" class="flat" name="progress"  value="closed"/>                            
                        </p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-dismiss="modal">Submit</button>
            </div>
        </div>

    </div>
</div>